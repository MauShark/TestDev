@model List<TestDev.Models.FacturaCabecera>

@{
    ViewData["Title"] = "IndexFC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Facturas</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="FacturaCabecera_detalle" asp-controller="FCController" asp-route-CliId="0">Crear Nuevo</a>
        <hr />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>N° Factura</th>
                    <th>Fecha</th>
                    <th>Razón Social</th>
                    <th>Estado</th>
                    <th>Monto Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FcId</td>
                        <td>@item.FechaAlta</td>
                        <td>@item.Cli.RazonSocial</td>
                        <td>@item.Estado</td>
                        <td>
                            <p>
                                @if (item.FacturaDetalles.Any())
                                {
                                    <span>Total: @item.FacturaDetalles.Where(d => d.Monto.HasValue).Sum(d => d.Monto)</span>
                                }
                                else
                                {
                                    <span>No hay detalles</span>
                                }
                            </p>
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
