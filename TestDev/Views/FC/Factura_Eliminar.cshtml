@model TestDev.Models.FacturaCabecera;
@{
    ViewData["Title"] = "Factura_Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Está seguro que desea eliminar la factura?</h3>
<hr />

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Factura_Eliminar" asp-controller="FC" method="post">
            <input Type="hidden" asp-for="FcId" />


            <div class="mb-2">
                <label class="form-label" asp-for="FcId">n° Factura</label>
                <input class="form-control form-control-sm" asp-for=FcId type="text" disabled />

            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="CliId">Cliente</label>
                <input class="form-control form-control-sm" asp-for=CliId type="text" disabled />

            </div>
            
            <div class="mb-2">
                <label class="form-label" asp-for="FechaAlta">Fecha Alta</label>
                <input class="form-control form-control-sm" asp-for=FechaAlta type="text" disabled />

            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Estado">Estado</label>
                <input class="form-control form-control-sm" asp-for=Estado type="text" disabled />

            </div>



            <div class="mb-2">



                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>

                <a class="btn btn-dark btn-sm" asp-action="indexFC" asp-controller="FC">Volver</a>

            </div>
        </form>
    </div>
</div>

